{
  "extends": "eslint:recommended",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2017
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    "indent": [
      "error",
      2,
      {"SwitchCase":1}
    ],
    "quotes": [
      "error",
      "single",
      {
        "avoidEscape": true
      }
    ],
    "semi": [
      "error",
      "never"
    ],
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "no-cond-assign": [
      "error",
      "always"
    ],
    "no-console": "off",
    "no-unused-vars": [
      "error",
      {
        "varsIgnorePattern": "express"
      }
    ]
  }
}